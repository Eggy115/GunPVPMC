			set slot {_e} of {_store} to gray stained glass pane named "&0 "			
			add 1 to {_e}
			
		set slot 10 of {_store} to light gray shulker box named "&7Default"
		if {rank::%player's uuid%} is "&7Default":
			set slot 10 of {_store} to light gray shulker box named "&7Default" with nbt "{HideFlags:127,Enchantments:[{id:""minecraft:protection"",lvl:1s}]}"	

		set line 1 of lore of slot 10 of {_store} to "&6None of the bonuses... :("

	
		set slot 11 of {_store} to pink shulker box named "&dDONOR"
		if {rank::%player's uuid%} is "DONOR":
			set slot 11 of {_store} to pink shulker box named "&dDONOR" with nbt "{HideFlags:127,Enchantments:[{id:""minecraft:protection"",lvl:1s}]}"	
						
