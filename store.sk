		set slot 16 of {_store} to tripwire hook named "&6Rank Upgrade (WIP)"

		open {_store} to player
		set {trade::%player's uuid%} to true	
		
on inventory click:
	if {trade::%player's uuid%} is true:
		cancel event
		
on drop:
	if {trade::%player's uuid%} is true:
		cancel event
		
on join:
	set {trade::%player's uuid%} to false
on quit:
	set {trade::%player's uuid%} to false
	
on inventory close:
	set {trade::%player's uuid%} to false


on inventory click:
	if event-item is light gray shulker box or pink shulker box or lime shulker box or light blue shulker box or purple shulker box or yellow shulker box:
		close player's inventory
		console command "/execute at %player% run playsound block.note_block.pling master %player% ~ ~ ~ 100000 2"